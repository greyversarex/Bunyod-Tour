modules = ["nodejs-20", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend React App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Demo Page"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Demo"

[[workflows.workflow]]
name = "Backend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"DATABASE_URL=file:./dev.db\" > .env && npx prisma generate && npx ts-node src/server.ts"
waitForPort = 5000

[[workflows.workflow]]
name = "Frontend React App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm start"
waitForPort = 3000

[[workflows.workflow]]
name = "Demo Page"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && python3 -m http.server 8000"
waitForPort = 8000

[[workflows.workflow]]
name = "Frontend Demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && python3 -m http.server 3000"
waitForPort = 3000

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80
